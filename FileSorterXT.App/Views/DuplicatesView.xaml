<UserControl x:Class="FileSorterXT.Views.DuplicatesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="430"/>
      <ColumnDefinition Width="14"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
      <StackPanel>
        <TextBlock FontSize="22" FontWeight="SemiBold" Text="Duplicates" Margin="0,0,0,14"/>

        <TextBlock FontWeight="SemiBold" Text="Scan Scope"/>
        <ComboBox x:Name="ScopeCombo" SelectionChanged="ScopeCombo_SelectionChanged">
          <ComboBoxItem Content="Last run destinations (default)"/>
          <ComboBoxItem Content="Pick a folder to scan"/>
        </ComboBox>

        <DockPanel x:Name="CustomScanPanel" Visibility="Collapsed">
          <TextBox x:Name="CustomScanBox" IsReadOnly="True"/>
          <Button Content="Browse" Margin="8,4,0,10" Click="BrowseCustomScan_Click"/>
        </DockPanel>

        <Button Content="Scan for duplicates" Click="Scan_Click"/>

        <Button x:Name="ApplyActionButton" Content="Apply duplicate action" Click="ApplyAction_Click" IsEnabled="False"/>

        <ProgressBar x:Name="DupProgress" Height="18" Minimum="0" Maximum="100" Value="0" Margin="0,8,0,10"/>
        <Button x:Name="DupCancelButton" Content="Cancel" Click="Cancel_Click" IsEnabled="False"/>

        <TextBlock x:Name="DupStatus" TextWrapping="Wrap" Margin="0,8,0,0"/>
      </StackPanel>
    </ScrollViewer>

    <Grid Grid.Column="2">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
        <TextBlock FontSize="22" FontWeight="SemiBold" Text="Groups"/>
        <TextBlock Text="  "/>
        <TextBlock x:Name="GroupMeta" VerticalAlignment="Bottom"/>
      </StackPanel>

      <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="14"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="GroupList" SelectionChanged="GroupList_SelectionChanged">
          <ListView.View>
            <GridView>
              <GridViewColumn Header="Key" Width="340" DisplayMemberBinding="{Binding Key}"/>
              <GridViewColumn Header="Size" Width="120" DisplayMemberBinding="{Binding Size}"/>
              <GridViewColumn Header="Count" Width="80" DisplayMemberBinding="{Binding Count}"/>
            </GridView>
          </ListView.View>
        </ListView>

        <ListView x:Name="FileList" Grid.Column="2">
          <ListView.View>
            <GridView>
              <GridViewColumn Header="File" Width="560" DisplayMemberBinding="{Binding Path}"/>
              <GridViewColumn Header="Modified UTC" Width="180" DisplayMemberBinding="{Binding ModifiedUtc}"/>
            </GridView>
          </ListView.View>
        </ListView>
      </Grid>

      <TextBlock Grid.Row="2" Text="Default action is Detect only. Change in Settings if you want moves." Margin="0,10,0,0"/>
    </Grid>
  </Grid>
</UserControl>
