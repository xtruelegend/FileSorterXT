<UserControl x:Class="FileSorterXT.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
      <TextBlock FontSize="22" FontWeight="SemiBold" Text="History and Logs"/>
      <TextBlock Text="  "/>
      <Button Content="Refresh" Click="Refresh_Click" Margin="10,4,0,10"/>
      <Button Content="Open Log Folder" Click="OpenLogFolder_Click" Margin="10,4,0,10"/>
      <Button Content="Open Last Run File" Click="OpenLastRun_Click" Margin="10,4,0,10"/>
    </StackPanel>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="420"/>
        <ColumnDefinition Width="14"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <ListView x:Name="LogList" SelectionChanged="LogList_SelectionChanged">
        <ListView.View>
          <GridView>
            <GridViewColumn Header="Log File" Width="360" DisplayMemberBinding="{Binding Name}"/>
            <GridViewColumn Header="Modified" Width="160" DisplayMemberBinding="{Binding Modified}"/>
          </GridView>
        </ListView.View>
      </ListView>

      <TextBox x:Name="LogPreview" Grid.Column="2" FontFamily="Consolas" FontSize="12"
               TextWrapping="NoWrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto"
               HorizontalScrollBarVisibility="Auto"/>
    </Grid>
  </Grid>
</UserControl>
