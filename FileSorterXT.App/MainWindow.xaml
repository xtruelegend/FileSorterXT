<Window x:Class="FileSorterXT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FileSorterXT.Views"
        Title="FileSorterXT" Height="820" Width="1220"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/FileSorterXT.ico">
  <DockPanel Margin="14">
    <TextBlock DockPanel.Dock="Bottom"
               Text="created by TrueLegendCustoms"
               FontSize="11"
               Foreground="#777"
               HorizontalAlignment="Center"
               Margin="0,10,0,0"/>
    <TabControl>
      <TabItem Header="Sort">
        <views:SortView />
      </TabItem>
      <TabItem Header="Settings">
        <views:SettingsView />
      </TabItem>
      <TabItem Header="Duplicates">
        <views:DuplicatesView />
      </TabItem>
      <TabItem Header="Transfer">
        <views:TransferView />
      </TabItem>
      <TabItem Header="History">
        <views:HistoryView />
      </TabItem>
    </TabControl>
  </DockPanel>
</Window>
